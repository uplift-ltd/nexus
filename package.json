{
  "private": true,
  "name": "@uplift-ltd/nexus",
  "version": "0.1.0",
  "description": "Uplift's front end core library.",
  "license": "UNLICENSED",
  "homepage": "https://nexus.uplift.sh/",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uplift-ltd/nexus.git"
  },
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "prettier:check": "prettier --list-different \"packages/*/src/**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "prettier:write": "prettier --write \"packages/*/src/**/*.{jsyarn,jsx,ts,tsx,json,md,css,scss}\"",
    "update-docs": "cd website && yarn update-docs",
    "deploy": "lerna publish from-package --yes"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,css,scss}": [
      "prettier --write"
    ],
    "*.md": [
      "yarn update-docs",
      "git add ./website"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.9",
    "babel-jest": "^26.2.2",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-fetch-mock": "^3.0.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  }
}
