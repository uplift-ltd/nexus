{
  "private": true,
  "name": "@uplift-ltd/nexus",
  "version": "0.1.0",
  "description": "Uplift's front end core library.",
  "license": "UNLICENSED",
  "homepage": "https://nexus.uplift.sh/",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uplift-ltd/nexus.git"
  },
  "scripts": {
    "build": "lerna run --stream build",
    "test": "lerna run --stream test",
    "prettier:check": "prettier --list-different \"packages/*/src/**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "prettier:write": "prettier --write \"packages/*/src/**/*.{jsyarn,jsx,ts,tsx,json,md,css,scss}\"",
    "eslint:check": "eslint packages --ext .js,.jsx,.ts,.tsx --cache",
    "eslint:fix": "eslint packages --ext .js,.jsx,.ts,.tsx --cache --fix",
    "update-docs": "cd website && yarn update-docs"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,css,scss}": [
      "prettier --write"
    ],
    "*.md": [
      "yarn update-docs",
      "git add ./website"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "babel-jest": "^26.2.2",
    "eslint": "^7.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-fetch-mock": "^3.0.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  }
}
