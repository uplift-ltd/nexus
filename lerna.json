{
  "packages": ["packages/*"],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"]
    },
    "version": {
      "conventionalCommits": true,
      "changelogPreset": {
        "name": "conventionalcommits",
        "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}"
      },
      "message": "chore(release): publish",
      "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"]
    },
    "run": {
      "stream": true
    },
    "exec": {
      "stream": true
    }
  }
}
