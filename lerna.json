{
  "packages": ["packages/*"],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com",
      "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"]
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"]
    },
    "run": {
      "stream": true
    },
    "exec": {
      "stream": true
    }
  }
}
